    <style>
        /* General Styling */
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
            font-size: 12px;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h1, h2 {
            font-family: Arial, sans-serif;
        }

        /* Responsive Grid Layout */
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            padding: 20px;
            margin: auto;
        }

        .user-card {
            border: 3px solid black;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: left;
            position: relative;
            font-size: 12px;
            transition: transform 0.3s ease-in-out;
        }

        .user-card:hover {
            transform: translateY(-10px);
        }

        .user-card img {
            width: 100%;
            max-width: 100px;
            height: auto;
            object-fit: cover;
            position: absolute;
            top: 10px;
            right: 10px;
            border-radius: 5px;
            border: 2px solid black;
        }

        .user-info {
            padding-right: 120px;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .grid-container {
                grid-template-columns: 1fr; /* One column for smaller screens */
            }

            .user-card {
                width: 90%;
                margin: auto;
            }

            .user-card img {
                max-width: 80px;
                top: 5px;
                right: 5px;
            }

            .user-info {
                padding-right: 80px;
            }
        }

        @media (max-width: 480px) {
            .user-card img {
                position: static;
                display: block;
                margin: 0 auto 10px;
            }

            .user-info {
                padding-right: 0;
                text-align: center;
            }
        }
    </style>
</head>
